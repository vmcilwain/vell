.page-header
  %h1.animated.bounceInDown Blogs
  #{link_to 'New Blog'} | #{link_to 'Search Posts'}
.search_form.well
  %form
    %header
      %h1 Search Posts
    .form-group
      =text_field_tag :headline_or_content_or_created_at_or_commenter_or_comment_content_or_content_created_at_contains, nil, placeholder: 'Search', class: 'form-control'
    .form-group
      =submit_tag 'Search', class: 'btn btn-primary btn-xs'
      =link_to 'Cancel', '#', class: 'btn btn-danger btn-xs cancel_search_form_link'
%hr
-5.times do
  %h2
    %a{:href => "#"} Blog Post Title
  %p.lead
    by
    %a{:href => "index.php"} Start Bootstrap
  %p
    %span.glyphicon.glyphicon-time
    Posted on August 28, 2013 at 10:00 PM
  %hr/
  .row
    .col-md-3
      %i.fa.fa-tags
      %span.data Ruby
    .col-md-3
      %i.fa.fa-comments
      %span.data
      =link_to pluralize([1,2].count, 'Comment')
    .col-md-3
      %i.fa.fa-files-o
      =link_to pluralize([1,2].count, 'File')
  %hr/
  %p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolore, veritatis, tempora, necessitatibus inventore nisi quam quia repellat ut tempore laborum possimus eum dicta id animi corrupti debitis ipsum officiis rerum.
  %a.btn.btn-primary{:href => "#"}
    Read More
    %span.glyphicon.glyphicon-chevron-right
  %hr/

