.page-header
  %h1.animated.bounceInDown Blogs
  =link_to 'New Blog', '#', class: 'btn btn-primary btn-xs'
  =link_to 'Search Posts', '#', class: 'btn btn-primary btn-xs search_form_link'
  %div{class: 'search_form'}
.search_form.well
  %form
    %header
      %h1 Search Posts
    .form-group
      =text_field_tag :headline, nil, placeholder: 'Blog Headline', class: 'form-control'
    .form-group
      =text_field_tag :content, nil, placeholder: 'Content', class: 'form-control'
    .form-group
      =text_field_tag :created_at, nil, placeholder: 'Created On', class: 'form-control'
    .form-group
      =text_field_tag :commenter, nil, placeholder: 'Commented By', class: 'form-control'
    .form-group
      =text_field_tag :comment_content, nil, placeholder: 'Commenter Comment', class: 'form-control'
    .form-group
      =text_field_tag :comment_created_at, nil, placeholder: 'Commented Created On', class: 'form-control'
    .form-group
      =submit_tag 'Search', class: 'btn btn-primary btn-xs'
      =link_to 'Cancel', '#', class: 'btn btn-danger btn-xs cancel_search_form_link'
%hr
-8.times do
  .row.animated.fadeIn
    .col-xs-12
      .panel.panel-info
        .panel-heading
          %h3.panel-title #{Faker::Lorem.words(5).join("\s")}
        .panel-body
          %p.text-muted 24 July 2013, Alexander Rechsteiner
          %p
            =truncate(Faker::Lorem.paragraphs(5).join("\s"), length: 200) { link_to "Read More", "#"}
          .meta.clearfix
            .row
              .col-xs-4
                .date
                  %i.fa.fa-calendar
                  %span.data 26 July 2013
              .col-xs-4
                .comments
                  %i.fa.fa-comments
                  %span.data
                    =link_to '26 Comments', '#'
              .col-xs-4
                .files
                  %i.fa.fa-file-text
                  %span.data
                    =link_to '0 Files', '#'