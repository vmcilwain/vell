.page-header
  %h1.animated.bounceInDown Blog Files


.search_form.well
  %h1 Search Blog Files
  %form
    .form-group
      =text_field_tag 'blog_document', nil, placeholder: 'Blog Document', class: 'form-control'
    .form-group
      =text_field_tag 'description', nil, placeholder: 'Blog Description', class: 'form-control'
    .form-group
      =text_field_tag 'created_at', nil, placeholder: 'Blog Created On', class: 'form-control'
    .form-group
      =submit_tag :Search, class: 'btn btn-primary btn-xs'
      =link_to :Cancel, '#', class: 'btn btn-danger btn-xs'
=link_to 'Search Posts', '#', class: 'btn btn-primary btn-xs'
%hr
.row.animated.fadeIn
  .col-xs-3
    File Name
  .col-xs-4
    Description
  .col-xs-2
    Blog
  .col-xs-3
    Created On
%br
-8.times do
  .row.animated.fadeIn
    .col-xs-3
      =link_to Faker::Lorem.words(3).join("\s"), '#'
    .col-xs-4
      =truncate Faker::Lorem.paragraphs(10).join("\s")
    .col-xs-2
      =link_to :View
    .col-xs-3
      =medium_date Date.today
  %hr