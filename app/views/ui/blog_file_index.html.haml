%div{class: 'container'}
  %div{class: 'master_links'}
    %a{href: '#'} New Blog
  %h1{class: 'title'} Blog Listing
  %div{class: 'search_form'}
    %h1 Search Blog Files
    %form
      %input{type: 'text', placeholder: 'Blog Document'}
      %br
      %input{type: 'text', placeholder: 'Blog Description'}
      %br
      %input{type: 'text', placeholder: 'Created On'}
      %br
      %div{class: 'actions'}
        %input{type: 'submit', value: 'Search'} 
        #{link_to 'Cancel', '#', class: 'cancel_search_form_link'}
  =link_to 'Search Posts', '#', class: 'search_form_link'
  %hr
  -8.times do
    %div{class: 'blog_file_listing'}
      =link_to Faker::Lorem.words(1).first, '#'
      %br
      =Faker::Lorem.paragraphs(1).join("\s")