%div{class: 'container'}
  %div{class: 'master_links'}
    =link_to 'Back to Photo Albums', '#'
  %h1{class: 'title'} Photos Listing
  %div{class: 'search_form'}
    %h1 Search Photos
    %form
      %input{type: 'text', placeholder: 'Name'}
      %br
      %input{type: 'text', placeholder: 'Description'}
      %br
      %input{type: 'text', placeholder: 'Created On'}
      %br
      %div{class: 'actions'}
        %input{type: 'submit', value: 'Search'} #{link_to 'Cancel', '#', class: 'cancel_search_form_link'}
  =link_to 'Search Photos', '#', class: 'search_form_link'
  %hr
  -5.times do
    %div{class: 'photos_listing'}
      =link_to image_tag('http://media.animevice.com/uploads/0/72/24116-mai_shiranui_6.jpg', width: '100px'), title: 'click to view comments'
      %span{class: 'photo_description'}
        &nbsp; #{Faker::Lorem.paragraphs(1).join("\s")}
        %div{class: 'master_links'}
          #{link_to 'View Album', '#'} | Comments: #{link_to '0', '#'} | #{link_to 'Edit', '#'} | #{link_to 'Destroy', '#'}
      %br