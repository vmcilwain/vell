.widewrapper.main
  .container
    %header
      %h1 Blogs Attachments
    =link_to 'Search Attachments', '#', class: 'search_form_link btn btn-default'
  
    .search_form
      .header
        %h1 Search Blog Attachments
      %form
        .form-group
          =text_field_tag :blog_headline, nil, class: 'form-control', placeholder: 'Blog Headline'
        .form-group
          =text_field_tag :name, nil, placeholder: 'Name', class: 'form-control'
        .form-group
          =text_field_tag :description, nil, placeholder: 'Description', class: 'form-control'
        .form-group
          =text_field_tag :created_at, nil, placeholder: 'Created On', class: 'form-control'
        .form-group
          =submit_tag 'Search', class: 'btn btn-default'
          =link_to 'Cancel', '#', class: 'cancel_search_form_link btn btn-danger'
    -5.times do
      .row
        .col-md-8.blog-main
          %article.blog-post
            %header
              %h1 #{link_to Faker::Lorem.words(4).join("\s"), '#'}
            .lead-image
              .meta.clearfix
                .author
                  %i.fa.fa-user
                  %span.data #{Faker::Name.name}
                .date
                  %i.fa.fa-calendar
                  %span.data #{Date.today}
                .files
                  %i.fa.fa-file-text
                  %span.data
                    =link_to Faker::Lorem.words(1).first, '#', title: 'view/download file'
                %p #{Faker::Lorem.paragraphs(1).first}
                =link_to 'Edit', '#', class: 'btn btn-default' 
                =link_to 'Destroy', '#', class: 'btn btn-danger'