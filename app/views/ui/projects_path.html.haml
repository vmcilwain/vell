.page-header
  %h1 Projects
  =link_to 'New Project', new_project_path if user_signed_in? && current_user.admin?
=form_tag projects_path, {method: :get, class: :well} do
  .row
    .col-md-12
      .form-group.form-group-lg
        =text_field_tag :q, params[:q], class: 'form-control search-input', placeholder: 'Search Projects'
  .row
    .col-md-12
      .form-group
        =submit_tag 'Search', class: 'btn btn-primary'
-5.times do
  %h2
    =link_to :Repo
  %p
    =Faker::Lorem.paragraph
  %a.btn.btn-primary{href: "#", target: :blank}
    Live
    %span.glyphicon.glyphicon-chevron-right
  %hr/
