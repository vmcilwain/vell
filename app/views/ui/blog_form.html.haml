.page-header
  %h1.animated.bounceInDown Create / Edit Blog
%form.well.animated.fadeIn
  .form-group
    =text_field_tag :headline, nil, size: 18, placeholder: 'Headline', class: 'form-control'
  .form-group
    =text_area_tag :body, nil, placeholder: 'Details', rows: 10, class: 'form-control'
  .form-group
    %input{type: 'file'}
  .form-group
    =text_field_tag :tag_list, nil, class: 'form-control', placeholder: 'Add Tags (Comma Seperated)'
  .form-group
    =submit_tag 'Submit', class: 'btn btn-primary btn-xs'
    =link_to 'Cancel', '#', class: 'btn btn-danger btn-xs'