%aside#create-comment.create-comment
  %hr
    .row
      #blog_comment_errors
    %h2
      %i.fa.fa-heart
      Add Comment
    =form_for BlogComment.new, remote: true do |f|
      =f.hidden_field :blog_id, value: @blog.id
      .row
        .col-md-6
          =f.text_field :name, placeholder: 'Name', id: 'comment-name', class: 'form-control input-lg'
        -#.col-md-6
      %br
        =f.text_area :body, placeholder: 'Your thoughts...', rows: 10, id: 'comment-body', class: 'form-control input-lg'
        .buttons.clearfix
          =link_to 'Cancel', '#', id: 'blog_comment_cancel_link', class: 'btn btn-xlarge btn-tales-two'
          =f.submit 'Post', class: 'btn btn-xlarge btn-tales-one'