  =form_for BlogComment.new, remote: true, format: :js , html: {class: 'well'} do |f|
    =f.hidden_field :blog_id, value: @blog.id
    .row
      .col-md-6
        -if user_signed_in?
          =f.text_field :name, placeholder: 'Name', id: 'comment-name', class: 'form-control input-lg comment_name', value: 'Lovell McIlwain'
        -else
          =f.text_field :name, placeholder: 'Name', id: 'comment-name', class: 'form-control input-lg comment_name'
      .col-md-6
        =f.text_field :email, placeholder: 'Email (Optional)', class: 'form-control input-lg comment_email'
    %br
      =f.text_area :body, placeholder: 'Your thoughts...', rows: 10, id: 'comment-body', class: 'form-control input-lg comment_body'
    .form-group
      =f.submit 'Post', class: 'btn btn-primary btn-xs'
      =link_to 'Cancel', '#', id: 'blog_comment_cancel_link', class: 'btn btn-default btn-xs', remote: true
