%div{class: 'row'}
  -if @blog_comment.errors.any?
    =flash[:error]
    %ul
      -@blog_comment.errors.full_messages.each do |err|
        %li #{err}
=form_for @blog_comment do |f|
  =f.hidden_field :blog_id, value: @blog.id
  %div{class: 'row'}
    =f.text_field :name, size: 80
  %div{class: 'row'}
    =f.text_area :body, cols: 80, rows: 10
  %div{class: 'row'}
    -if @blog_comment.new_record?
      %div{class: '3u'}
        =f.submit 'Create'
      %div{class: '3u'}
        =link_to :Cancel, blog_comments_path
    -else
      %div{class: '3u'}
        =f.submit 'Update'
      %div{class: '3u'}
        =link_to :Cancel, @blog_comment