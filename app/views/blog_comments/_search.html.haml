%div{class: 'search_form'}
  %div{class: 'row'}
    %h1.title Search Blog Comments
  =search_form_for @q do |f|
    .row
      =f.search_field :blog_headline_cont, placeholder: 'Blog Headline', size: 50
    %div{class: 'row'}
      =f.search_field :name_cont, placeholder: 'Commenter', size: 50
    %div{class: 'row'}
      =f.search_field :body_cont, placeholder: 'Comment', size: 50
    %div{class: 'row'}
      %div{class: '3u'}
        %input{type: 'submit', value: 'Search'} 
      %div{class: '3u'}
        =link_to 'Cancel', '#', class: 'cancel_search_form_link cancel-button'