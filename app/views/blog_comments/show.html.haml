.page-header
  .row
    .col-xs-12
      -if flash[:success]
        %div{class: 'alert alert-success'}
          =flash[:success]
  %h1 #{@blog_comment.name} wrote
.row
  .col-xs-2
    Created At:
  .col-xs-3
    =medium_date2 @blog_comment.created_at
  .col-xs-2
    Updated At:
  .col-xs-3
    =medium_date2 @blog_comment.updated_at
.row
  .col-xs-12
    =@blog_comment.body
.row
  .col-xs-4
    =link_to :Edit, edit_blog_comment_path(@blog_comment), class: 'btn btn-primary btn-xs'
    =link_to :Listing, blog_comments_path, class: 'btn btn-danger btn-xs'