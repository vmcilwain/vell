%br
%div{class: 'container'}
  %div{class: 'row'}
    =flash[:success]
  %div{class: 'row'}
    %div{class: '3u'}
      Name:
    %div{class: '3u'}
      =@blog_comment.name
  %div{class: 'row'}
    %div{class: '3u'}
      Body:
    %div{class: '9u'}
      =@blog_comment.body
  %div{class: 'row'}
    %div{class: '3u'}
      Created At:
    %div{class: '4u'}
      =medium_date @blog_comment.created_at
  %div{class: 'row'}
    %div{class: '3u'}
      Updated At
    %div{class: '4u'}
      =medium_date @blog_comment.updated_at
  %div{class: 'row'}
    %div{class: '1u'}
      =link_to :Edit, edit_blog_comment_path(@blog_comment)
    %div{class: '1u'}
      =link_to :Listing, blog_comments_path