.container
  .row
    .page-header
      %h1 #{@blog_comment.name} wrote
    .col-xs-2
      Created At:
    .col-xs-3
      =medium_date @blog_comment.created_at
    .col-xs-2
      Updated At:
    .col-xs-3
      =medium_date @blog_comment.updated_at
  .row
    -if flash[:success]
      %div{class: 'alert alert-success'}
        =flash[:success]
  .row
    .col-xs-12
      =@blog_comment.body
  .row
    .col-xs-4
      =link_to :Edit, edit_blog_comment_path(@blog_comment), class: 'btn btn-primary'
      =link_to :Listing, blog_comments_path, class: 'btn btn-danger'