%div{class: 'container'}
  %div{class: 'row'}
    %div{class: '2u'}
      =link_to 'Search Posts', '#', class: 'search_form_link'
    %div{class: '3u'}
      =link_to 'New Blog File', new_blog_file_path
  %div{class: 'row'}
    %h1{class: 'title'} Blog File Listing
  =render 'search'
  =will_paginate @blog_files, class: 'apple_pagination'
  %hr
  -@blog_files.each do |blog_file|
    %div{class: 'row'}
      %div{class: '5u'}
        =image_tag blog_file.doc.url
      %div{class: '7u'}
        %div{class: 'row'}
          =link_to blog_file.blog.headline, blog_file.blog
        =blog_file.description
        %div{class: 'row'}
          %div{class: '2u'}
            =link_to blog_file.doc_file_name, blog_file.doc.url
          %div{class: '2u'}
            =link_to :Delete, blog_file, method: :delete, data: {confirm: 'Are you sure?'}