#main
  .page-header
    %h1 Create an article
  =render partial: 'layouts/error_messages', locals: {obj: @blog}
  =form_for @blog, multipart: true, html: {class: "well animated fadeIn"} do |f|

    .form-group
      =f.text_field :headline, placeholder: 'Enter Headline',class: 'form-control'
    .form-group
      =f.trix_editor :body, placeholder: 'Share your thoughts'
    .form-group
      =f.text_field :tag_list, class: 'form-control', placeholder: 'Add Tags (Comma Seperated)'
    .form-group
      .row
        =f.fields_for :blog_files do |builder|
          .col-xs-4
            = builder.file_field :doc
    .form-group
      .row
        .col-xs-12
          =f.label :to_twitter, 'Tweet it?'
          =f.check_box :to_twitter
      .row
        .col-xs-12
          =f.submit class: 'btn btn-success btn-xs'
          =link_to 'Cancel', blogs_path, class: 'btn btn-danger'
