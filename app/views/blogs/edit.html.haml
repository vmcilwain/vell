.page-header
  %h1 Need Something Corrected?
=render partial: 'layouts/error_messages', locals: {obj: @blog}
=form_for @blog, multipart: true, html: {class: :well} do |f|
  .form-group
    =f.text_field :headline, placeholder: 'Headline (Make it good!)', class: 'form-control'
  .form-group
    =f.trix_editor :body, placeholder: 'Whats on your mind?'
  .form-group
    .row
      .col-xs-12
        =f.submit class: 'btn btn-primary'
        =link_to 'Cancel', @blog, class: 'btn btn-default'
