-if @blog.errors.any?
  =flash[:error]
  %ul
    -@blog.errors.full_messages.each do |err|
      %li #{err}
=form_for @blog do |f|
  =f.select :blog_category_id, @blog_categories, prompt: true
  %br
  =f.text_field :headline, placeholder: 'Enter Headline', size: 18
  =f.text_area :body, placeholder: 'Enter Details'
  / %input{type: 'file'}
  %br
  %br
  %div{class: 'actions'}
    =f.submit
    =link_to 'Cancel', blogs_path