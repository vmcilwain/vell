=form_tag searches_path, {class: :well, method: :get} do
  .row.form-group.form-inline
    .col-md-12
      =select_tag :klass, options_for_select({Articles: :article, Projects: :project}), {class: 'form-control'}
      =text_field_tag :q, params[:q], class: 'form-control', size: 105, placeholder: :Search
  .row
    .form-group
      .col-md-12
        =submit_tag :Search, class: 'btn btn-primary'
