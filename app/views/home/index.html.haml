-if flash[:success]
  .alert.alert-success
    =flash[:success]
-elsif flash[:error]
  .alert.alert-danger
    =flash[:error]
%h1 Recent Posts
.row.animated.fadeIn
  -if @blogs[3]
    .col-xs-6
      .panel.panel-info
        .panel-heading
          %h3.panel-title #{@blogs.last.headline}
        .panel-body
          %p.text-muted #{medium_date2 @blogs.last.created_at}, Lovell McIlwain
          %p
            =truncate(to_text(@blogs.last.body), length: 50) {link_to ' Read More', @blogs.last}
