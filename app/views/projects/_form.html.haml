.page-header
  -if @project.errors.any?
    %div{class: 'row alert alert-danger'}
      =flash[:error]
      %ul
        -@project.errors.full_messages.each do |message|
          %li #{message}

=form_for @project do |f|
  .form-group
    =f.label :repo_url
    =f.text_field :repo_url, class: 'form-control'
  .form-group
    =f.label :live_url
    =f.text_field :live_url, class: 'form-control'
  .form-group
    =f.label :description
    =f.text_field :description, class: 'form-control'
  .form-group
    =f.submit class: 'btn btn-success btn-xs'
    -if @project.new_record?
      =link_to 'Cancel', projects_path, class: 'btn btn-danger btn-xs'
    -else
      =link_to 'Cancel', @project, class: 'btn btn-danger btn-xs'
