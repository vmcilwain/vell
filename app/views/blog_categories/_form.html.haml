-if flash[:error]
  %div{class: 'row alert alert-danger'}
    =flash[:error]
    %ul
      -@blog_category.errors.full_messages.each do |message|
        %li #{message}
.well
  =form_for @blog_category do |f|
    .form-group
      =f.label :name
      %br
      =f.text_field :name, size: '18', placeholder: 'Enter Category Name'
    .form-group
      =f.label :enable
      %br
      =f.check_box :enabled
    .form-group
      =f.submit class: 'btn btn-primary'
      =link_to 'Cancel', blog_categories_path, class: 'btn btn-danger'
   