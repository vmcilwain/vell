%div{class: 'container'}
  %div{class: 'row'}
    %h1{class: 'title'} Blog Categories
  %div{class: 'row'}
    %div{class: 'search_form'}
      %h1 Search Blog Categories
      %form
        %div{class: 'row'}
          %div{class: '6u'}
            %input{type: 'text', placeholder: 'Name'}
          %div{class: '6u'}
            %input{type: 'text', placeholder: 'Created On'}
        %div{class: 'row'}
          / %div{class: 'actions'}
          %div{class: '6u'}
            %input{type: 'submit', value: 'Search'}
          %div{class: '6u actions'}
            =link_to 'Cancel', '#', class: 'cancel_search_form_link'
  %div{class: 'row'}
    %div{class: '3u'}
      =link_to 'Search Categories', '#', class: 'search_form_link actions'
    %div{class: '3u'}
      =link_to 'New Category', new_blog_category_path
  %hr
  %div{class: 'row'}
    =flash[:success]
  -@blog_categories.each do |blog_category|
    %div{class: 'row'}
      %div{class: '4u'}
        =blog_category.name
      %div{class: '4u'}
        =link_to 'Edit', edit_blog_category_path(blog_category)
      %div{class: '4u'}
        Enabled: #{blog_category.enabled}