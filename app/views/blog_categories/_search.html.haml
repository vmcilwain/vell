.row
  .search_form
    =search_form_for @q do |f|
      .form-group
        =f.label :name
        %br
        =f.search_field :name_cont, placeholder: 'Name'
      .form-group
        =f.label :enabled
        %br
        =f.check_box :enabled
      .form-group
        =f.submit 'Search', class: 'btn btn-primary'
        =link_to 'Cancel', '#', class: 'cancel_search_form_link btn btn-danger'