%div{class: 'row'}
  %div{class: 'search_form'}
    =search_form_for @q do |f|
      %div{class: 'row'}
        %div{class: '8u'}
          =f.search_field :name_cont, placeholder: 'Name'
      .row
        .3u
          =f.label :Enabled
        .4u
          =f.check_box :enabled
      %div{class: 'row'}
        %div{class: '6u'}
          %input{type: 'submit', value: 'Search'}
        %div{class: '4u'}
          =link_to 'Cancel', '#', class: 'cancel_search_form_link cancel-button'