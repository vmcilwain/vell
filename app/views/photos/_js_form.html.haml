%div{class: 'row'}
  %div{id: 'photo_js_nofication'}
=form_for Photo.new, multipart: true, remote: true do |f|
  %div{class: 'row'}
    %h1 Add Photo
  =hidden_field_tag :authenticity_token, form_authenticity_token
  =f.hidden_field :photo_album_id, value: @photo_album.id
  %div{class: 'row'}
    =f.file_field :document
  %div{class: 'row'}
    %div{class: '12u'}
      =f.text_field :description, placeholder: 'Description'
  %div{class: 'row'}
    %div{class: "8u"}
      =f.submit
    %div{class: '4u'}
      =link_to 'Cancel', '#', id: 'cancel_photo_form'
%div{class: 'row'}
  =link_to 'Add Photo', '#', id: 'add_photo_form'