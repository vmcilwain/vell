%div{class: 'search_form'}
  =search_form_for @q do |f|
    .row
      =f.select :photo_album_id, PhotoAlbum.all.collect{|x| [x.name, x.id]}, prompt: true
    %div{class: 'row'}
      =f.search_field :document_file_name_cont, placeholder: 'Photo Name', size: 60
    %div{class: 'row'}
      =f.search_field :description, placeholder: 'Description', size: 60
    %div{class: 'row'}
      %div{class: '3u'}
        %input{type: 'submit', value: 'Search'} 
      %div{class: '2u'}
        =link_to 'Cancel', '#', class: 'cancel_search_form_link cancel-button'