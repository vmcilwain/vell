%div{class: 'search_form'}
  =search_form_for @q do |f|
    %div{class: 'row'}
      %div{class: '5u'}
        =f.search_field :name_cont, placeholder: 'Name', size: 40
    %div{class: 'row'}
      %div{class: '5u'}
        =f.search_field :description_cont, placeholder: 'Description', size: 40
    %row{class: 'row'}
      %div{class: '3u'}
        %input{type: 'submit', value: 'Search'} 
      %dov{class: '6u'}
        =link_to 'Cancel', '#', class: 'cancel_search_form_link cancel-button'